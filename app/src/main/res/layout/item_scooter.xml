<!-- item_scooter.xml -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="10dp">

    <ImageView
        android:id="@+id/scooterImageView"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginEnd="10dp"
        android:scaleType="centerCrop"
        android:src="@drawable/samokat" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/scooterIdTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ID: 123" />

        <TextView
            android:id="@+id/scooterBatteryTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Battery: 100%" />

        <TextView
            android:id="@+id/scooterStatusTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Status: Available" />

        <TextView
            android:id="@+id/scooterDistanceTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Distance: 500m" />
    </LinearLayout>
</LinearLayout>
